@model CardUpdateDTO

<form asp-action="Update" class="container" method="POST" enctype="multipart/form-data">
    <h2 class="my-4">Update Card</h2>
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title" />
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description" />
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Image"></label>
        <input class="form-control" asp-for="@Model.Image" />
        <img style="height: 150px;" src="~/uploads/cards/@Model.ImagePath" />
        <span class="text-danger" asp-validation-for="@Model.Image"></span>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>